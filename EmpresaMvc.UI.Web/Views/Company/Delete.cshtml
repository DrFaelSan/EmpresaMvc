@model EmpresaMvc.ApplicationCore.Entitys.Company;

@{
    ViewData["Title"] = "Empresas - Deletar";
}


<div class="row align-items-center justify-content-center vh-100">
    <div class="card col-6">
        <div class="card-header">
            <h1 class="display-4">Exclusão da empresa</h1>
        </div>
        <div class="card-body">
            <form class="rounded-3" asp-action="Delete">
                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                    </symbol>
                </svg>
                    @if (Model != null)
                    {
                       <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                            <div>
                                Você tem certeza que gostaria de excluir a empresa <span class="badge bg-danger ml-4">@Model.Name</span>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="name" placeholder="Digite o nome da empresa" required asp-for="Name">
                            <label asp-for="Name">Nome da Empresa</label>
                        </div>
                        <div class="text-center justify-content-center">
                            <button type="submit" class="btn btn-outline-dark">Excluir</button>
                            <button type="button" class="btn btn-outline-dark" onclick="location.href='@Url.Action("Index","Company")'" >Voltar</button>
                         </div>
                    }
                    else
                    {
                         <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                            <div>
                                Nenhuma empresa foi selecionada para exclusão !
                            </div>
                        </div>
                        <div class="text-center justify-content-center">
                            <button type="button" class="btn btn-outline-dark" onclick="location.href='@Url.Action("Index","Company")'" >Voltar</button>
                        </div>
                    }
                
            </form>
        </div>
    </div>
</div>


